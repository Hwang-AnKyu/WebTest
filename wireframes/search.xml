<page path="/search">
    <header></header>
    
    <search>
        <form action="/search" method="get">
            <title>게시글 검색</title>
            
            <select label="게시판 선택">
                <option value="">전체 게시판</option>
                <option value="{board_id}">{게시판명}</option>
            </select>
            
            <select label="검색 타입">
                <option value="title">제목</option>
                <option value="content">내용</option>
                <option value="title,content">제목+내용</option>
            </select>
            
            <input type="text" label="검색어" name="q" required />
            
            <button type="submit">검색</button>
        </form>
    </search>
    
    <results>
        <title>검색 결과</title>
        <count>총 {count}개의 게시글을 찾았습니다.</count>
        
        <list>
            <item href="/posts/{post_id}">
                <board>[{게시판명}]</board>
                <title>{게시글 제목}</title>
                <excerpt>{내용 일부...}</excerpt>
                <meta>
                    <author>{작성자}</author>
                    <date>{작성일}</date>
                </meta>
            </item>
        </list>
        
        <pagination>
            <prev>이전</prev>
            <numbers>1 2 3 4 5</numbers>
            <next>다음</next>
        </pagination>
    </results>
    
    <footer></footer>
</page>